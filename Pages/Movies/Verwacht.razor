@page "/movies/verwacht"
@using Cinema7.Models;
@inject Cinema7.Data.Controllers.FilmController filmController
@inject Cinema7.Data.CinemaDbContext _CinemaDbContext

<h2>Verwachtte Films</h2>
<table class="table">
    <tr>
        <th>Titel</th>
        <th>Genre</th>
    </tr>
    @foreach (var film in films)
    {
        <tr>
            <td>@film.Titel</td>
            <td>@film.Genre</td>
            <td><a href="movies/filmdetails/@film.Id">Details</a></td>
        </tr>
    }
</table>

@code {
    List<Films> films = null;

    protected override void OnInitialized()
    {
        films = filmController.SelectFilmStatus("Verwacht");
    }
}